<body>
    {{>header}}
    <div class="main">
        <div class="main__msg-box">
            <p class="main__msg-box-msg">{{msg}}</p>
            <p class="main__msg-box-err">{{err_msg}}</p>
        </div>
        <div class="main__loginbox">
            <img src= "img/avatar.png" class= "loginbox__avatar-img">
            <h1>Login Here</h1>
            <form method="POST" action="/users/login">
                <p>E-mail</p>
                <input type="text" name="email" placeholder="Podaj email">
                <p>Password</p>
                <input type="password" name="password" placeholder="Podaj hasÅ‚o">
                <input type="submit" name="" value="Zaloguj">
                <a href="#">Lost your password? </a><br>
                <a href="">Don't have an account? </a>
            </form>
        </div>
    </div>
        
    {{>footer}}
    
</body>
</html>